<?xml version="1.0" encoding="UTF-8"?>
<!-- SECURE CONFIGURATION: log4j with JNDI lookups disabled -->
<Configuration status="WARN" formatMsgNoLookups="true">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        
        <!-- File Appender -->
        <File name="FileAppender" fileName="logs/frontgate-application.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>
    </Appenders>
    
    <Loggers>
        <!-- Secure configuration: JNDI lookup is disabled with formatMsgNoLookups=true -->
        <Logger name="com.contrast.frontgateservice" level="INFO" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileAppender" />
        </Logger>
        
        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
